datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  sets     Set[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Set {
  id          String @id @default(uuid())
  title       String
  description String
  pairs       Pair[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  String?
}

model Pair {
  id         String  @id @default(uuid())
  term       String
  definition String
  Set        Set?    @relation(fields: [setId], references: [id])
  setId      String?
}
